<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <div class="form-logo">
      <%=link_to 'Loocook', "/", class:"header-logo" %>
      </div>
        <%= form_with model: @user, url:user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :nickname, "ユーザー名" %><br />
          <%= f.text_field :nickname, id:"user_name", class:"text_field" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email",class:"text_field" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" ,class:"text_field"%>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" ,class:"text_field"%>
        </div>

        

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
      <div class="to-registration">すでにアカウントをお持ちですか？</div>
      <div class="new-registration">
      <%= link_to 'ログイン', new_user_session_path, class: :registration_btn  %>
      </div>
    </div>
  </div>
</div>